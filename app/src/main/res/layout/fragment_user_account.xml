<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:textSize="18sp"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:textColor="#FFFFFF"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Post"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/post_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Salary"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/salary_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Joining Date"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/joining_date_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Working plan"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/working_plan_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <!-- Addition Information-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additions"
                android:textSize="18sp"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Holiday"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/holiday_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Overtime"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/overtime_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Miscellaneous"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/miscellaneous_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <!-- Deduction Information-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deduction"
                android:textSize="18sp"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Loan"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/loan_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Late"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/late_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Miscellaneous"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/miscellaneous_deduction_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <!-- Company Deduction Information-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Deduction"
                android:textSize="18sp"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Absent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/absent_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="WTAX"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/wtax_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <!-- Net Total Information-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Net Total"
                android:textSize="18sp"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Total Addition"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/total_addition_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Total deduction"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/total_deduction_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Net Pay"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/net_pay_value"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Users"
                android:id="@+id/show_users"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>